<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#4b033f">

    <TextView
        android:textColor="#000000"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#ffffff"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:text="ABOUT THE APP"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:text="Shop and Sell"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:textSize="18dp"
        android:text="With this app you can add your own items to sell and provide your contact information."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:textSize="18dp"
        android:layout_marginBottom="3dp"
        android:text="From Buy option a interested customer can see your item and call you to buy it."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>